!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "🔍 Checking code formatting and linting..."

npm run check-lint || (echo "❌ Lint and type check failed 💀💀 your code sucks" && exit 1)

npm run check-format || (
  echo "❌ Prettier check failed 💀💀 your code formatting sucks"
  echo "💡 Use 'npm run fix-format' to fix it"
  exit 1
)
npx lint-staged
npm test
